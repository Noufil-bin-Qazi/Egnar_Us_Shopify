<!-- SLIDE SECTION Banner,hero text,hero button -->
{% if section.settings.slide_image != blank %}
  {% assign slide_image_url = section.settings.slide_image |  img_url: 'master' %}
 {% else %}
  {% assign slide_image_url = 'https://asrv.com/cdn/shop/files/philosophy-1_2000x.png' %} 
{% endif %}
<section class="bg-cover bg-center" style="background-image: url('{{ slide_image_url }}');">
  
    <div class="flex flex-col justify-center items-center md:items-center md:justify-end md:pb-20">
      <div class="h-fit md:max-w-[800px] mx-16 mt-60 my-10 Slideshow__Content Slideshow__Content--Position"> <!-- Add 70px padding to left and right --> 
    
      <h3 class="font-body text-white text-justify md:text-right font-thin text-shadow text-xs md:text-base md:pr-60 mb-6">{{ section.settings.slide_text }}</h3> <!-- Set h3 font size to 14px -->
      
      <div class="SectionHeader__ButtonWrapper">
        <div class="flex flex-col md:flex-row md:justify-end">
          <a href="{{ section.settings.slidebutton_href }}" class="bg-white flex-shrink-0 hover:bg-gray-200 font-body font-light text-center text-xs text-black uppercase mb-3 py-4 px-7 md:mr-60 md:ml-20">{{ section.settings.slidebtntext }}</a>
        </div>
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Slide Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "slide_image",
      "label": "Select Background Image"
    },
    {
       "type": "text",
       "label": "Slide Text",
       "id": "slide_text",
       "default": "RELEASING THIS SUNDAY DOWNLOAD"

    },
    {
      "type": "text",
      "label": "Slide Button Link",
      "id": "slidebutton_href",
      "default": "#"
    },
    {
      "type": "text",
      "label": "Slide Button Text",
      "id": "slidebtntext",
      "default": "BUTTON Text 1"
    }
  ]
}
{% endschema %}
