<div class="h-full flex items-center justify-center py-16 px-6 md:px-4 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-black text-center text-2xl font-body font-extralight mt-6 mb-3">Register</h1>
            <p class="text-gray-600 text-center text-sm font-body font-extralight">Please fill in the information below:</p>
        </div>
        <div class="mt-8">
            {% form 'create_customer' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-sm text-red 700 px-4 py-3" role="alert">
                        <strong class="text-sm font-normal font-body">Error!</strong>
                        <p class="block sm:inline text-sm font-normal font-body">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}

                <div class="my-3">
                    <label for="first_name" class="sr-only">First name</label>
                    <input type="text"
                        name="customer[first_name]"
                        id="first_name"
                        autocomplete="given-name"
                        class="relative block w-full px-3 py-3 text-[13px] border font-body font-extralight focus:border-black focus:outline-none"
                        placeholder="First name"
                    >
                </div>

                <div class="my-3">
                    <label for="last_name" class="sr-only">Last name</label>
                    <input type="text"
                        name="customer[last_name]"
                        id="last_name"
                        autocomplete="family-name"
                        class="relative block w-full px-3 py-3 text-[13px] border font-body font-extralight focus:border-black focus:outline-none"
                        placeholder="Last name"
                    >
                </div>

                <div class="my-3">
                    <label for="email_address" class="sr-only">Email address</label>
                    <input type="email"
                        name="customer[email]"
                        id="email_address"
                        autocomplete="email"
                        class="relative block w-full px-3 py-3 text-[13px] border font-body font-extralight focus:border-black focus:outline-none"
                        placeholder="Email address"
                    >
                </div>

                
                <div class="my-3">
                    <label for="password" class="sr-only">Password</label>
                    <input type="password"
                        name="customer[password]"
                        id="password"
                        autocomplete="new-password"
                        class="relative block w-full px-3 py-3 text-[13px] border font-body font-extralight focus:border-black focus:outline-none"
                        placeholder="Password"
                    >
                </div>
                
                <div>
                    <button type="submit" class="relative w-full py-3.5 px-4 text-[12px] tracking-widest font-body font-normal uppercase text-white bg-black hover:bg-opacity-85 transition-opacity">
                        Create my account
                    </button>
                </div>
            {% endform %}
        </div>
    </div>
</div>