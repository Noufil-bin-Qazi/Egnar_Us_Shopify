<div class="h-full flex items-center justify-center py-16 px-6 md:px-4 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-black text-center text-2xl font-body font-extralight mt-6 mb-3">Reset your password</h1>
        </div>
        <div class="mt-8">
            {% form 'reset_customer_password' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="font-bold">Error!</strong>
                        <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}

                

                
                <div class="my-3">
                    <label for="password" class="sr-only">Password</label>
                    <input type="password"
                        name="customer[password]"
                        id="password"
                        autocomplete="new-password"
                        class="relative block w-full px-3 py-3 text-[13px] border font-body font-extralight focus:border-black focus:outline-none"
                        placeholder="Password"
                    >
                </div>

                <div class="my-3">
                    <label for="password_confirmation" class="sr-only">Password Confirmation</label>
                    <input type="password"
                        name="customer[password_confirmation]"
                        id="password_confirmation"
                        autocomplete="new-password"
                        class="relative block w-full px-3 py-3 text-[13px] border font-body font-extralight focus:border-black focus:outline-none"
                        placeholder="Confirm your password"
                    >
                </div>
                
                <div>
                    <button type="submit" class="relative w-full py-3.5 px-4 text-[12px] tracking-widest font-body font-normal uppercase text-white bg-black hover:bg-opacity-85 transition-opacity">
                        Reset password
                    </button>
                </div>
            {% endform %}
        </div>
    </div>
</div>