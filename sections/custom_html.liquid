<div class="custom-html-section">
  {{ section.settings.custom_html_code }}
  <script>
  document.addEventListener("DOMContentLoaded", function() {
    var link = document.querySelector('a[href*="elfsight.com/testimonials-slider-widget"]');
    if (link) {
      link.style.display = "none";
    }
  });
</script>
</div>

   {% schema %}
    {
  "name": "Custom HTML",
  "settings": [
    {
      "type": "text",
      "id": "custom_html_code",
      "label": "Custom HTML Code"
    }
  ],
  "blocks": []
}

    {% endschema %}