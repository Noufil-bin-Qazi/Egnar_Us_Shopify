<div class="h-80 max-h-80 w-full absolute top-0 left-0 --pageimage">
    {% assign title_lowercase = page.title |  downcase %}
   {% case title_lowercase %}
    {% when 'contact' %}
        {% if section.settings.background_image_contact %}
            <img class="absolute inset-0 object-cover w-full h-full" src="{{ section.settings.background_image_contact | img_url: 'master' }}" alt="Background Image">
        {% endif %}
    {% when 'about' %}
        {% if section.settings.background_image_about %}
            <img class="absolute inset-0 object-cover w-full h-full" src="{{ section.settings.background_image_about | img_url: 'master' }}" alt="Background Image">

        {% endif %}
     {% when 'our vision' %}
        {% if section.settings.background_image_vision %}
            <img class="absolute inset-0 object-cover w-full h-full" src="{{ section.settings.background_image_vision | img_url: 'master' }}" alt="Background Image">

        {% endif %}
     {% when 'manufacturing' %}
        {% if section.settings.background_image_mfc %}
            <img class="absolute inset-0 object-cover w-full h-full" src="{{ section.settings.background_image_mfc | img_url: 'master' }}" alt="Background Image">
     {% endif %}
     {% when 'our network' %}
        {% if section.settings.background_image_network %}
            
        <img class="absolute inset-0 object-cover w-full h-full" src="{{ section.settings.background_image_network | img_url: 'master' }}" alt="Background Image">
        {% endif %} 
     {% when 'returns policy' %}
        {% if section.settings.background_image_returns %}
            
        <img class="absolute inset-0 object-cover w-full h-full" src="{{ section.settings.background_image_returns | img_url: 'master' }}" alt="Background Image">
        {% endif %}
     {% when 'terms of service' %}
        {% if section.settings.background_image_terms %}
            
        <img class="absolute inset-0 object-cover w-full h-full" src="{{ section.settings.background_image_terms | img_url: 'master' }}" alt="Background Image">
        {% endif %}
     {% when 'privacy policy' %}
        {% if section.settings.background_image_policy %}
            
        <img class="absolute inset-0 object-cover w-full h-full" src="{{ section.settings.background_image_policy | img_url: 'master' }}" alt="Background Image">
        {% endif %}
    {% else %}
        
   {% endcase %} 
  
  
  <div class="absolute inset-0 flex items-center justify-center">
    <div class="text-white text-center collheader">
      <h1 class="text-4xl md:text-5xl mt-18 md:mt-16 uppercase tracking-wider fade-up-enter-active">
        {% assign wordbold = page.title | split: ' ' %}
        {% assign firstword = wordbold | first %}
        <span class="font-normal font-body">{{ firstword }}</span>
        {% for word in wordbold offset: 1  %}
            <span class="font-body font-extralight">{{ word }}</span>
        {% endfor %}
      
      </h1>
      <!-- Add other content as needed -->
    </div>
  </div>
</div>

<div class="justify-center px-20 lg:px-36 py-20 font-body font-extralight --pagedescription">{{ page.content }}</div>
