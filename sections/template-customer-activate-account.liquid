<div class="min-h-full flex items-center justify-center py-24 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-black text-center text-2xl font-body font-extralight mt-6 mb-3">Activate account</h1>
            <p class="text-gray-600 text-center text-sm font-body font-extralight">Create your password to activate your account</p>
        </div>

        <div>
            {% form 'activate_customer_password', class: 'space-y-4', id: 'activate_account_form' %}
                {% if form.errors %}
                    <div class="relative border border-red-700 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="font-bold">Error!</strong>
                        <span class="block sm:inline">
                            {{ form.errors | default_errors }}
                        </span>
                    </div>
                {% endif %}
                <div>
                    <label for="password" class="sr-only">Password</label>
                    <input type="password" 
                        name="customer[password]" 
                        id="password"
                        placeholder="New password"
                        class="relative block w-full px-3 py-3 text-[13px] border font-body font-extralight focus:border-black focus:outline-none"
                        autocomplete="new-password"
                        >
                </div>

                <div>
                    <label for="confirm_password" class="sr-only">Confirm password</label>
                    <input type="password" 
                        name="customer[password_confirmation]" 
                        id="confirm_password"
                        placeholder="Confirm your password"
                        class="relative block w-full px-3 py-3 text-[13px] border font-body font-extralight focus:border-black focus:outline-none"
                        autocomplete="new-password"
                        >
                </div>

                <div class="block md:flex gap-1">
                    <button type="submit" class="relative w-full py-3.5 px-4 text-[12px] tracking-widest font-body font-normal uppercase text-white bg-black hover:bg-opacity-85 transition-opacity">Activate account</button>
                    <button type="submit" name="decline" class="relative w-full py-3.5 px-4 text-[12px] tracking-widest font-body font-normal uppercase text-black bg-black bg-opacity-0 hover:bg-opacity-100 hover:text-white transition-opacity">Decline invitation</button>
                </div>
            {% endform %}
        </div>
    </div>
</div>