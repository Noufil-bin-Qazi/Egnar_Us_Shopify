<div class="flex flex-col items-center my-8">
    {% if section.settings.title != blank %}
        <h1 class="text-3xl font-medium my-8 md:my-16">{{ section.settings.title }}</h1>
    {% endif %}
    
    {% form 'contact' %}

        {% if form.errors %}
            <div class="border p-5">
                <div class="flex flex-row items-center w-full my-3">
                    <div class="text-red-500">
                        {% render 'icon-failed' %}
                    </div>
                    <div class="text-sm font-medium ml-3">
                        Error! Your message is not sent
                    </div>
                </div>
                <ul class="px-4 mb-3 ml-7 list-decimal">
                    {% for error in form.errors %}
                        <li>
                            <span>{{ form.errors.messages[error] }}</span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% elsif form.posted_successfully? %}
            <div class="flex flex-row items-center w-full my-3 p-5">
            
                <div class="text-sm font-medium ml-3">Your message is sent successfully</div>
            </div>
        {% endif %}

        <div class="lg:w-[1100px] justify-center flex-1 items-center px-4">
            <div class="flex flex-col md:flex-row px-1 mb-4">
                <div class="px-3 lg:w-full">
                    <label class="capitalize text-sm font-body font-extralight text-gray-700" for="first-name">First Name*</label>
                    <input class="border rounded-md py-3 px-4 mt-1 mb-3 text-gray-700 w-full" type="text" name="contact[first_name]" id="first_name" required>
                </div>
                <div class="px-3 md:w-full">
                    <label class="capitalize text-sm font-body font-extralight text-gray-700" for="last-name">Last Name*</label>
                    <input class="border rounded-md py-3 px-4 mt-1 mb-3 text-gray-700 w-full" type="text" name="contact[last_email]" id="last_name" required>
                </div>
            </div>

            <div class="flex flex-col px-1 mb-4">
                <div class="px-3 md:w-full mb-4">
                    <label class="capitalize text-sm font-body font-extralight text-gray-700" for="order-number">Order Number*</label>
                    <input class="border rounded-md py-3 px-4 mt-1 mb-3 text-gray-700 w-full" type="text" name="contact[order_number]" id="order-number" required>
                </div>
                <div class="px-3 md:w-full">
                    <label class="capitalize text-sm font-body font-extralight text-gray-700" for="contact_email">Email address*</label>
                    <input class="border rounded-md py-3 px-4 mt-1 mb-3 text-gray-700 w-full" type="email" name="contact[email]" id="contact_email" required>
                </div>
            </div>

            <div class="flex px-1 mb-4">
                <div class="w-full px-3">
                    <label class="capitalize text-sm font-body font-extralight text-gray-700" for="contact_message">Message*</label>
                    <textarea class="border py-3 px-4 rounded-md mt-1 mb-3 text-gray-700 h-24 w-full" name="contact[body]" id="contact_message" required></textarea>
                </div>
            </div>

            <div class="flex justify-center px-1 mb-4">
                <div class="w-52 px-3">
                    <input type="submit" class="w-full cursor-pointer px-4 py-4 tracking-[.2rem] border uppercase text-xs font-body font-normal bg-black bg-opacity-85 text-white hover:bg-opacity-100 transition-opacity" value="Send Message">
                </div>
            </div>
        </div>        
    {% endform %}
</div>

{% schema %}
{
    "name": "Contact Form",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        }
    ],
    "presets": [
        {
            "name": "Contact Form"
        }
    ]
}
{% endschema %}