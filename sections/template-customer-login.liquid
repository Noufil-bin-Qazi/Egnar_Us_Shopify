<div class="h-full flex items-center justify-center py-16 px-6 md:px-4 lg:px-8" x-data="{ loginForm: true, pwRecoverForm: false }">
    <div x-show="loginForm" class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-black text-center text-2xl font-body font-extralight mt-6 mb-3">Login</h1>
            <p class="text-gray-600 text-center text-sm font-body font-extralight">Please enter your e-mail and password:</p>
        </div>
        <div class="mt-8">
            {% form 'customer_login' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red 700 px-4 py-3" role="alert">
                        <strong class="font-bold">Error!</strong>
                        <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}

                <div class="my-3">
                    <label for="email_address" class="sr-only">Email address</label>
                    <input type="email"
                        name="customer[email]"
                        id="email_address"
                        autocomplete="email"
                        class="relative block w-full px-3 py-3 text-[13px] border font-body font-extralight focus:border-black focus:outline-none"
                        placeholder="Email"
                    >
                </div>

                {% if form.password_needed %}
                    <div class="my-3">
                        <label for="password" class="sr-only">Password</label>
                        <input type="password"
                            name="customer[password]"
                            id="password"
                            autocomplete="current-password"
                            class="relative block w-full px-3 py-3 text-[13px] border font-body font-extralight focus:border-black focus:outline-none"
                            placeholder="Password"
                        >
                    </div>
                {% endif %}

                <div class="my-2 text-sm">
                    <a x-on:click="loginForm = false; pwRecoverForm = true" href="#" class="underline text-gray-500 hover:text-gray-900">
                        Forgot your password?
                    </a>
                </div>
                <div>
                    <button type="submit" class="relative w-full py-3.5 px-4 text-[12px] tracking-widest font-body font-normal uppercase text-white bg-black hover:bg-opacity-85 transition-opacity">
                        Log in
                    </button>
                </div>
            {% endform %}
        </div>
    </div>
    <div x-show="pwRecoverForm" class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-black text-center text-2xl font-body font-extralight mt-6 mb-3">Recover your password</h1>
        </div>
        <div class="mt-8">
            {% form 'recover_customer_password' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-sm text-red 700 px-4 py-3" role="alert">
                        <strong class="text-sm font-normal font-body">Error!</strong>
                        <p class="block sm:inline text-sm font-normal font-body">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}

                <div class="my-3">
                    <label for="email" class="sr-only">Email address</label>
                    <input type="email"
                        name="email"
                        id="email"
                        autocomplete="email"
                        class="relative block w-full px-3 py-3 text-[13px] border font-body font-extralight focus:border-black focus:outline-none"
                        placeholder="Email"
                    >
                </div>

                <div>
                    <button type="submit" class="relative w-full py-3.5 px-4 text-[12px] tracking-widest font-body font-normal uppercase text-white bg-black hover:bg-opacity-85 transition-opacity">
                        Recover password
                    </button>
                </div>

                <div class="mt-8 text-sm">
                    <a x-on:click="loginForm = true; pwRecoverForm = false" href="#" class="underline text-gray-500 hover:text-gray-900">Back to login</a>
                </div>
            {% endform %}
        </div>
    </div>
</div>