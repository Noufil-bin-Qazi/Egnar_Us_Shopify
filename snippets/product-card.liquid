<div class="w-full py-6 px-8">
             <div class="bg-white overflow-hidden">
                     <a href="{{ product.url }}">
                        {% if product.featured_image %}
                           <div class="overflow-hidden relative group">
                             <img class="w-full h-full object-cover transition-opacity duration-300 ease-in-out opacity-100 group-hover:opacity-0 z-10" 
                                  src="{{ product.featured_image | img_url: 'master' }}" 
                                  alt="{{ product.featured_image.alt }}">
                            
                             {% if product.images.size > 1 %}
                               {% assign secondImage = product.images[1] %}
                               <img class="w-full h-full object-cover absolute inset-0 opacity-0 transition-opacity duration-300 ease-in-out group-hover:opacity-100 z-20" 
                                    src="{{ secondImage | img_url: 'master' }}" 
                                    alt="{{ secondImage.alt }}">
                               
                             {% endif %}
                           </div>
                         {% else %}
                           {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}   
                         {% endif %}
                      </a>
                            
                           

                           
                    <div class="flex flex-col p-4">
                            
                         <a href="{{ product.url }}" class="text-gray-700 text-center leading-6 tracking-[1.4px] uppercase text-[13px] font-extralight font-body">{{ product.title }}</a>
                        <p class="text-gray-500 font-extralight text-[13px] text-center pt-1">{{ product.price | money }}</p>
                    </div>
                               
             </div>
 </div>